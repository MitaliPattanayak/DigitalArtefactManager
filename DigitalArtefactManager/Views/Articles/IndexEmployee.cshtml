@model IEnumerable<DigitalArtefactManager.Models.Article>

@{
    ViewBag.Title = "IndexEmployee";
}

<h2>Articles</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Body)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
           
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Body)
        </td>
       
        <td>
            @if ((item.likeCount) != null)
            {
                <span class="grayfont">
                    @Html.DisplayFor(modelItem => item.likeCount) Like(s)
                </span>
            }
            <span class="bluefont">
                @Html.ActionLink("Read the Article", "ReadArticles", new { id = item.ArticleId })
            </span>
        </td>
    </tr>
}

</table>
